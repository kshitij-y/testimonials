generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Replace with "mysql" or "sqlite" if using those
  url      = env("DATABASE_URL") // Ensure your .env file has the DATABASE_URL
}
model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String?  
  googleId     String?  @unique
  name         String?
  avatarUrl    String?  
  Spaces       Space[]
}

model Space {
  id          Int       @id @default(autoincrement())
  userId      Int
  name        String
  description String
  logoUrl     String
  title       String
  Questions   String[]
  thankGif    String
  thankTitle  String
  thankMsg    String
  testimonial Testimonial[]

  user User @relation(fields: [userId], references: [id])
}

model Testimonial {
  id        Int      @id @default(autoincrement())
  spaceId   Int
  name      String
  email     String
  content   String
  videoUrl  String?
  space     Space   @relation(fields: [spaceId], references: [id])
}