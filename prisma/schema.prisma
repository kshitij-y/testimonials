generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Replace with "mysql" or "sqlite" if using those
  url      = env("DATABASE_URL") // Ensure your .env file has the DATABASE_URL
}

model User {
  id         Int        @id @default(autoincrement())
  name       String
  email      String     @unique
  password   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  testimonials Testimonial[]
  widgets    Widget[]
}

model Testimonial {
  id         Int        @id @default(autoincrement())
  content    String
  authorName String?
  authorEmail String?
  rating     Int?       @default(5)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  user       User       @relation(fields: [userId], references: [id])
  userId     Int
  tags       TestimonialTag[]
}

model Widget {
  id         Int        @id @default(autoincrement())
  name       String
  embedCode  String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  user       User       @relation(fields: [userId], references: [id])
  userId     Int
}

model Tag {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  testimonials TestimonialTag[]
}

model TestimonialTag {
  testimonial Testimonial @relation(fields: [testimonialId], references: [id])
  testimonialId Int
  tag           Tag       @relation(fields: [tagId], references: [id])
  tagId         Int

  @@id([testimonialId, tagId])
}
